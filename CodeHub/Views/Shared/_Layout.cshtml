<!DOCTYPE html>
<html lang="en">
<head>
	<partial name="_Style" />
</head>
<body>
	<partial name="_Loader" />
	<div class="progress-wrap">
		<svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
			<path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
		</svg>
	</div>
	@if (ViewData["Title"] == "Settings" || ViewData["Title"] == "Profile" || ViewData["Title"] == "Shop Page" || ViewData["Title"] == "Product Details" || ViewData["Title"] == "About Us")
	{
		<partial name="_ShopHeader" />
	}
	else
	{
		<partial name="_Header" />
	}
	<partial name="_ShoppingCart" />
	<partial name="_SideBar" />
	@RenderBody()
	<partial name="_Footer" /> 
	<partial name="_Script" />
	@RenderSection("Script", false)
</body>
</html>
